extends ./layout/app

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contenido 
    div(class="py-5")
        h1(class="text-center text-4xl font-extrabold font-mono") Ubicaci√≥n en el Mapa

        div(class="flex flex-col md:flex-row items-center py-10 gap-4")
            h2(class="text-sm uppercase text-cute_purple-100 font-bold font-mono") -Filtrar Propiedades-
                
            div(class="w-full md:w-auto flex items-center gap-2")    
                label(for="categorias" class="text-sm w-24 uppercase text-cute_purple-100 font-bold font-mono") Categorias:
                select(id="categorias" class="flex-2 bg-white w-full px-3 py-2 border border-cute_purple-100 rounded-md shadow text-center") 
                    option(value=""  ) - Seleccione - 
                    each categoria in categorias 
                        option(value=categoria.id )= categoria.nombre 

            div(class="w-full md:w-auto flex items-center gap-2")    
                label(for="precios" class="text-sm w-24 uppercase text-cute_purple-100 font-bold font-mono") Precios:
                select(id="precios" class="flex-2 bg-white w-full px-3 py-2 border border-cute_purple-100 rounded-md shadow text-center") 
                    option(value=""  ) - Seleccione - 
                    each precio in precios 
                        option(value=precio.id )= precio.nombre 

        div(id="mapa-inicio" class="h-[600px] mt-5" )

        section(class="py-5")
            h2(class="text-center text-4xl font-extrabold pt-10 font-mono") Casas en venta 

            div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-14")
                each propiedad in casas
                    include ./templates/card
                    
        section(class="py-5")
            h2(class="text-center text-4xl font-extrabold pt-10 font-mono") Departamentos en venta 

            div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-14")
                each propiedad in departamentos
                    include ./templates/card

block scripts 
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="/js/mapaInicio.js") 