extends ../layout/admin 

block contenido
    h2(class="text-2xl font-extrabold text-center my-10 font-mono")= pagina

    a(href="/mis-propiedades" class="rounded py-2 px-10 bg-cute_purple-100 hover-bg-cute_purple-200 text-sm font-bold text-center text-white uppercase my-5 inline-block w-full sm:w-auto") Volver

    div(class="mx-auto max-w-4xl bg-white shadow")

        if mensajes.length 
            ul 
                each mensaje in mensajes 
                    li(class="border-cute_purple-100 border-b p-5")
                        p(class="font-bold text-cute_purple-100 font-mono") Nombre: 
                            span(class="font-normal")= mensaje.usuario.nombre


                        p(class="font-bold text-cute_purple-100 font-mono") Email: 
                            span(class="font-normal")= mensaje.usuario.email    

                        p(class="font-bold text-cute_purple-100 font-mono") Mensaje: 
                            span(class="font-normal")= mensaje.mensaje

                        p(class="font-bold text-cute_purple-100 font-mono") Enviado: 
                            span(class="font-normal")= formatearFecha( mensaje.createdAt )       
        else 
            p(class="text-center text-cute_purple-100 p-5 font-mono") No hay Mensajes   